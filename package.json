{
  "name": "telltale",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "scripts": {
    "build": "bun run build:cjs && bun run build:esm && bun run build:post",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:post": "bun scripts/create-esm-package.js",
    "postinstall": "bun run build",
    "prepublishOnly": "bun run build",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist",
    "src",
    "index.ts",
    "tsconfig.json",
    "tsconfig.cjs.json",
    "tsconfig.esm.json",
    "scripts"
  ],
  "devDependencies": {
    "@babel/parser": "^7.27.4",
    "@babel/traverse": "^7.27.4",
    "@babel/types": "^7.27.3",
    "@types/babel__traverse": "^7.20.7",
    "@types/bun": "latest",
    "vite": "^6.3.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
